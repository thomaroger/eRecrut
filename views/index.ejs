<% layout('layout/layout') -%>

<div class="row login">
  <div class="col-md-offset-4 col-md-4 col-sm-offset-4 col-sm-4 col-lg-4 col-lg-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">eRecrut - Back</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" method="post" id="loginAdmin" action="/">
          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email address">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
          </div>
          <button type="submit" name="submit" class="btn btn-success pull-right">Validate</button>
        </form>
      </div>
    </div>
  </div>
</div>
